@{
    Layout = null;
}
<form id="frmAddProduct" method="post" asp-action="Add" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header h5">Edit Image</div>
        <div class="card-body">
            <input type="hidden" name="CreateBy" value="1" />
            <div class="input-group my-1">
                <input class="form-control" type="file" name="ImageFile" placeholder="Input Picture...." />
            </div>
        </div>
        <div class="card-footer text-end">
            <div class="btn-group">
                <button type="button" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
     </div>
</form>