@{
    ViewData["Title"] = "Home Page";
}


<div class="container-fluid bg-primary text-white pt-4 d-none pb-3 d-lg-flex">
    <div class="container-fluid pb-2">
        <div class="row">
            <div class="col-4 d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a class="h1 text-white mb-0" asp-area="" asp-controller="Home" asp-action="Index">Healthy<span class="text-dark">Together</span></a>
            </div>
            <div class="col-8 d-flex justify-content-lg-end">
                <form id="frmFind" class="input-group w-50" asp-action="Index">
                    <input name="filter" id="txtFilter" placeholder="Search...." class="form-control" />
                    <button type="submit" id="btnFilter" class="input-group-text"><i class="fas fa-search"></i></button>
                </form>
                
            </div>
        </div>
    </div>
</div>

<!-- Brand End -->
    <!-- Navbar Start  -->
<div class="container-fluid sticky-top">
    <div class="container" style="height: 50px">
        <nav class="navbar navbar-expand-lg navbar-light bg-white p-5 py-lg-0 px-lg-5">
            <a class="navbar-brand d-lg-none">
                <h1 class="text-primary m-0">Healthy<span class="text-dark">Together</span></h1>
            </a>
            <button type="button" class="navbar-toggler me-0" data-bs-toggle="collapse"
                    data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav">
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-link text-dark" asp-controller="Dokter" asp-action="Index">Dokter</a>
                    <a class="nav-link text-dark">Faskes</a>
                    <a class="nav-link text-dark" asp-controller="CariObat" asp-action="Index">Obat</a>
                </div>
             </div>
        </nav>
    </div>
</div>


<div class="container col-xxl-8 px-4 py-5">
    <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
        <div class="col-10 col-sm-8 col-lg-6">
            <img src="~/images/dokter.png" class="d-block mx-lg-auto img-fluid" alt="Bootstrap Themes" width="700" height="500" loading="lazy">
        </div>
        <div class="col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">Get Better Care For Your Health</h1>
            <p class="lead">Quickly design and customize responsive mobile-first sites with Bootstrap, the world’s most popular front-end open source toolkit, featuring Sass variables and mixins, responsive grid system, extensive prebuilt components, and powerful JavaScript plugins.</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <button id="btnMasuk" type="button" class="btn btn-primary btn-lg px-4 me-md-2" data-bs-toggle="modal" data-bs-target="#staticModal">
                    Log In
                </button>
                <button id="btnSignUp" type="button" class="btn btn-outline-secondary btn-lg px-4" data-bs-toggle="modal" data-bs-target="#staticModal">Sign Up</button>
            </div>
        </div>
    </div>
</div>


<script>
    $("#btnMasuk").click(function (event) {
        debugger;
        $("#staticModalBody").load("/Login/Index/");

    });
    $("#btnSignUp").click(function (event) {
        debugger;
        $("#staticModalBody").load("/Register/EmailVerif/");

    });
    
</script>



